			</Grid>
		</StackPanel>
		<Grid Name="Grid_Morale" Background="Gold" Width="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="18" Margin="165,0,0,0">
			<misc:OutlinedTextBlock x:Name="OTB_Morale" Text="85" Fill="White" Stroke="Black" FontSize="13" StrokeThickness="3" Height="18" TextAlignment="Center"/>
		</Grid>
		<Grid Name="Grid_Fuel" Background="DarkOliveGreen" Width="46" Height="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="74,0,0,0"/>
		<misc:OutlinedTextBlock x:Name="OTB_Fuel" Text="100%" Width="46" Height="18" Margin="74,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Fill="White" Stroke="Black" FontSize="13" TextAlignment="Center" StrokeThickness="3"/>
		<Grid Background="Gray" Width="46" Height="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="74,0,0,0" Panel.ZIndex="-1"/>
		<Grid Name="Grid_Ammo" Background="SaddleBrown" Width="45" Height="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120,0,0,0"/>
		<misc:OutlinedTextBlock x:Name="OTB_Ammo" Text="100%" Width="45" Height="18" Margin="120,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Fill="White" Stroke="Black" FontSize="13" TextAlignment="Center" StrokeThickness="3"/>
		<Grid Background="Gray" Width="45" Height="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="120,0,0,0" Panel.ZIndex="-1"/>
		<misc:OutlinedTextBlock x:Name="OTB_ExpNext" Width="71" Height="18" Text="293848" TextAlignment="Center" Fill="LightGray" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Bottom" StrokeThickness="2" Panel.ZIndex="1"/>
		<Grid Name="Grid_ExpNext" Background="Blue" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="18" Width="71"/>
		<Grid Background="Gray" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="18" Width="71" Panel.ZIndex="-1"/>
		<misc:OutlinedTextBlock x:Name="OTB_ShipName" Text="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Fill="White" Stroke="Black" StrokeThickness="2" TextWrapping="Wrap" Width="74" TextAlignment="Center" FontSize="12"/>
	</Grid>
</UserControl>
