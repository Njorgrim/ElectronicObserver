			<Grid Name="Grid_Equip5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="30" Margin="1,0">
				<Ellipse Name="Ell_Equip5" Width="30" Height="30" Fill="Gray" Visibility="Visible" VerticalAlignment="Top"/>
				<Image Name="Img_Equip5" Source="{x:Null}" Height="25" Width="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="3"/>
				<misc:OutlinedTextBlock x:Name="OTB_Equip5_Level" Text="+★" Fill="White" Stroke="Black" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="-1,-2" StrokeThickness="3" />
				<misc:OutlinedTextBlock x:Name="OTB_Equip5_PlaneCount" Text="47" Fill="White" Stroke="Black" FontSize="12" StrokeThickness="3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,-2"/>
				<Image Name="Img_Equip5_PlaneRank" Source="{StaticResource Icon_Level_AircraftLevelTop7}" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-4,-10"/>
			</Grid>
			<Grid Name="Grid_EquipRE" HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="30" Margin="1,0">
				<Ellipse Name="Ell_EquipRE" Width="30" Height="30" Fill="Gray" Visibility="Visible" VerticalAlignment="Top"/>
				<Image Name="Img_EquipRE" Source="{x:Null}" Height="25" Width="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="3"/>
				<misc:OutlinedTextBlock x:Name="OTB_EquipRE_Level" Text="+★" Fill="White" Stroke="Black" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="-1,-2" StrokeThickness="3" />
				<misc:OutlinedTextBlock x:Name="OTB_EquipRE_PlaneCount" Text="47" Fill="White" Stroke="Black" FontSize="12" StrokeThickness="3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,-2"/>
