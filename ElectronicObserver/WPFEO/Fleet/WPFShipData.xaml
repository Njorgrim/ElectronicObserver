			</Grid>
			<Grid Name="Grid_Equip4" HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="30" Margin="1,0">
				<Ellipse Name="Ell_Equip4" Width="30" Height="30" Fill="Gray" Visibility="Visible" VerticalAlignment="Top"/>
				<Image Name="Img_Equip4" Source="{x:Null}" Height="25" Width="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="3"/>
				<misc:OutlinedTextBlock x:Name="OTB_Equip4_Level" Text="+★" Fill="White" Stroke="Black" FontSize="12" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="-1,-2" StrokeThickness="3" />
