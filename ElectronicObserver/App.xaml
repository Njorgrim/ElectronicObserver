<Application x:Class="ElectronicObserver.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:miscControls="clr-namespace:ElectronicObserver.WPFEO.MiscControls">
	<Application.Resources>

		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/ElectronicObserverTheme;component/Theme.xaml" />
				<ResourceDictionary Source="pack://application:,,,/ElectronicObserver;component/Properties/Icons.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<SolidColorBrush x:Key="EOBackground" Color="Black" />
			<SolidColorBrush x:Key="EOBlue" Color="#268BD2" />

			<Style TargetType="miscControls:OutlinedTextBlock">
				<Setter Property="Fill" Value="Gray"/>
				<Setter Property="Stroke" Value="Black"/>
				<Setter Property="FontSize" Value="13"/>
				<Setter Property="StrokeThickness" Value="0"/>
				<Setter Property="TextAlignment" Value="Center"/>
				<Setter Property="HorizontalAlignment" Value="Center"/>
				<Setter Property="VerticalAlignment" Value="Center"/>
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>