<Application x:Class="WPFBrowser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter="clr-namespace:WPFBrowser.ExtraBrowser.Converter"
             Startup="App_OnStartup">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/ElectronicObserverTheme;component/Theme.xaml" />
				<ResourceDictionary Source="pack://application:,,,/Properties/Icons.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<!-- needed in extra browser -->
			<converter:TitleConverter x:Key="TitleConverter"/>
			<converter:EnvironmentConverter x:Key="EnvironmentConverter" />
			<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
		</ResourceDictionary>
	</Application.Resources>
</Application>
